{
    "openapi": "3.0.2",
    "info": {
        "title": "Games-api",
        "version": "1.0.0",
        "description": "A brand new API with no content.  Go nuts!"
    },
    "paths": {
        "/games": {
            "get": {
                "tags": [
                    "games"
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/200"
                    }
                },
                "summary": "Get a list of games",
                "description": "Returns a list of games in API\n"
            }
        }
    },
    "components": {
        "responses": {
            "200": {
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "examples": {
                            "List of games": {
                                "value": [
                                    "Witcher 3",
                                    "Cyberpunk 2077",
                                    "World of Warcraft"
                                ]
                            }
                        }
                    }
                },
                "description": "Returns a list of games"
            }
        }
    }
}